{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es2018",
		"noImplicitAny": true,
		"moduleResolution": "node",
		"sourceMap": true,
		"outDir": "dist",
		"baseUrl": ".",
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"paths": {
			"*": [
				"node_modules/*",
				"src/types/*"
			],
			"(src)/*": [
				"src/*"
			],
			"(root)/*": [
				"*"
			]
		},
		"rootDirs": [
			"./src"
		]
	},
	"include": [
		"src/**/*"
	],
	"exclude": []
}